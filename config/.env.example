# French Real Estate Rental Hunter Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///data/rental_hunter.db

# Email Configuration (Gmail example - adjust for your provider)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Rental Hunter Bot

# Twilio Configuration (for phone calls)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+33123456789

# Search Criteria
SEARCH_CITIES=Paris,Lyon,Marseille,Toulouse,Nice,Bordeaux
MAX_PRICE=1500
MIN_PRICE=500
MIN_ROOMS=1
MAX_ROOMS=4
PROPERTY_TYPES=apartment,studio,house
SEARCH_KEYWORDS=balcon,parking,métro,transport,proche centre
EXCLUDE_KEYWORDS=meublé,furnished,colocation,shared

# Scraper Configuration
SCRAPING_DELAY_MIN=2
SCRAPING_DELAY_MAX=5
MAX_CONCURRENT_SCRAPERS=3
USE_PROXY=False
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Enable/Disable Specific Scrapers
ENABLE_SELOGER=True
ENABLE_LEBONCOIN=True
ENABLE_PAP=True
ENABLE_LOGIC_IMMO=True
ENABLE_BIENICI=True

# Contact Management
MAX_CONTACT_ATTEMPTS=3
FOLLOW_UP_DELAY_HOURS=24

# Scheduling (Cron format)
ENABLE_SCHEDULER=True
SCRAPING_SCHEDULE=0 9,15,21 * * *
CONTACT_SCHEDULE=0 10,16 * * *
FOLLOW_UP_SCHEDULE=0 11,17 * * *

# Duplicate Detection
ADDRESS_SIMILARITY_THRESHOLD=0.85
DESCRIPTION_SIMILARITY_THRESHOLD=0.75
PRICE_DIFFERENCE_THRESHOLD=50

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5